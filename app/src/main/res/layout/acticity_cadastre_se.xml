<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="@string/hint_nome_completo"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/cpf_cnpj"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/switch_pessoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pessoa"
                    android:textOff="@string/btnT_fisica"
                    android:textOn="@string/btnT_juridica"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cadastro_CPF_CNPJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/background_shadow"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*RG:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_RG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="12.345.678-9"
                android:inputType="number"
                android:maxLength="9"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Data de nascimento:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:onClick="cadastro_btnNascimento"
                    android:text="Calendario" />

                <EditText
                    android:id="@+id/cadastro_nascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/background_shadow"
                    android:hint="20/06/2005"
                    android:inputType="datetime"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*CEP:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_CEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="00000-000"
                android:inputType="numberSigned"
                android:maxLength="8"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Endereço:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="Rua Fernando Ivan, 99"
                android:inputType="textPostalAddress"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Bairro:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="Jd. Dolores"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Município:"
                    android:textAlignment="textStart"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cadastro_municipio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/background_shadow"
                    android:hint="Osasco"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Estado:"
                    android:textAlignment="textStart"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/cadastro_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/background_shadow"
                    android:hint="SP"
                    android:inputType="text"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:textAllCaps="true"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Complemento:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_complemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="Casa/Ap. 02; 11º andar"
                android:inputType="text"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Telefone Residencial:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_telefone_residencial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="(00) 1234-5678"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Telefone Celular:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_telefone_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="(00) 91234-5678"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Email:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="seuEmail@seuEmail.com"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Confirmar email:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_confirmar_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="seuEmail@seuEmail.com"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textIsSelectable="false"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Senha:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="Senha"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="5dp"
                android:textIsSelectable="false"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="*Confirmar senha:"
                android:textAlignment="textStart"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cadastro_confirmar_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/background_shadow"
                android:hint="Senha"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="5dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="4dp"
                        android:onClick="cadastro_btnFechar"
                        android:text="Cancelar" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:onClick="cadastro_btnCadastrar"
                        android:text="Cadastrar!" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>