<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TelaPrincipal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp">

            <!-- Acima da grade -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="150dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Primeira Coluna.* -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:onClick="telaPrincipal_irCelular"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:onClick="telaPrincipal_irArCondicionado"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/borda_redonda" />

                    </LinearLayout>

                    <!-- Segunda Coluna.* -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:onClick="telaPrincipal_irVideoGames"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:onClick="telaPrincipal_irComputador"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/borda_redonda" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            android:onClick="telaPrincipal_irMontarComputador"
                            android:src="@drawable/borda_redonda" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</LinearLayout>