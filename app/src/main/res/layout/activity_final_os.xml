<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_fernando"
    android:orientation="vertical"
    tools:context=".servicos.Final_OS">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modelo_tela_principal"
        android:backgroundTint="#66000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="32dp"
                android:text="@string/servico_agendado"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagemPessoa_finalOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:padding="12dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borda_redonda"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/star_off" />

                    <TextView
                        android:id="@+id/notaPrestador_finalOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.12"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <!--android:text="@string/nota_prestador"-->

                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="finalOS_randomPessoa"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/gg_dez_oitenta" />

            </LinearLayout>


            <TextView
                android:id="@+id/nomePrestador_finalOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginBottom="35dp"
                android:text="@string/nome_prestador_final_os"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/finalOS_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@string/data_agendada_final_os"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/finalOS_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@string/hora_agendada_final_os"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/finalOS_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@string/pagamento_agendado_final_os"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

            <!-- <TextView
                 android:id="@+id/finalOS_tipo"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginVertical="20dp"
                 android:text="@string/tipo_agendado_final_os"
                 android:textColor="@android:color/black"
                 android:textSize="22sp" /> -->

            <!-- <TextView
                android:id="@+id/finalOS_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@string/marca_agendado_final_os"
                android:textColor="@android:color/black"
                android:textSize="22sp" /> -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <Button
                    android:id="@+id/concluido_finalOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="52dp"
                    android:background="@drawable/borda_redonda"
                    android:gravity="center"
                    android:onClick="finalOS_btnConcluido"
                    android:text="@string/concluido_final_os"
                    android:theme="@style/corVerde" />

            </TableRow>

        </LinearLayout>


    </ScrollView>


</LinearLayout>